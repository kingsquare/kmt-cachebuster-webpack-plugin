{
  "compilerOptions": {
    "target": "es5",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "lib": ["es2015"],
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": "src",
    "outDir": "lib",
    "declaration": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/test/*"]
}
